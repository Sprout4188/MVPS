<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".common.MainActivity">

    <com.songcw.basecore.widget.NoScrollViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/ntb_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        app:ntb_animation_duration="200"
        app:ntb_badged="false"
        app:ntb_bg_color="@android:color/white"
        app:ntb_corners_radius="0dp"
        app:ntb_active_color="@android:color/black"
        app:ntb_inactive_color="@android:color/black"
        app:ntb_scaled="true"
        app:ntb_swiped="false"
        app:ntb_tinted="true"
        app:ntb_title_mode="all"
        app:ntb_title_size="10sp"
        app:ntb_titled="true"/>
</LinearLayout>
