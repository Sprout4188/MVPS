<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="@style/AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/item_line</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!--***************启动页Theme***************-->


    <style name="Theme.Splash" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="textWorkbenchOption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/apply_bg_work_option_selector</item>

    </style>



    <style name="textDebtListDetail" parent="text_nomal_stytle">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textSize">@dimen/font_size_13</item>
    </style>

    <style name="line_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#FFE5E5E5</item>
    </style>

    <style name="text_nomal_stytle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_13font_000000_stytle" parent="text_nomal_stytle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textSize">@dimen/font_size_13</item>
    </style>

    <style name="text_10font_000000_stytle" parent="text_nomal_stytle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textSize">@dimen/font_size_13</item>
    </style>

    <style name="baseEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="big_btn_black_stytle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:background">@drawable/selector_black_big_btn</item>
        <item name="android:layout_marginTop">72dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="textOrderInfoTitle" parent="baseTextOrderInfo">
        <item name="android:layout_marginTop">@dimen/margin_19</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="textOrderInfoDetail" parent="baseTextOrderInfo">
        <item name="android:layout_marginTop">@dimen/margin_12</item>
        <item name="android:layout_marginBottom">@dimen/margin_19</item>
        <item name="android:textColor">@color/color_707070</item>

    </style>

    <style name="baseTextOrderInfo" parent="text_nomal_stytle">
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:textSize">@dimen/font_size_13</item>
    </style>


    <style name="baseEditText2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="editPsd" parent="baseEditText2">
        <item name="android:inputType">textPassword</item>
        <item name="android:digits">@string/input_num_character</item>
        <item name="android:maxLength">8</item>


    </style>
    <style name="baseButtonBlack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">54dp</item>

        <item name="android:background">@drawable/btn_normal_bg_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
